{
  "version": 2,
  "builds": [
    {
      "src": "start_enhanced_server.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "app/**",
          "../frontend/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "start_enhanced_server.py" },
    { "src": "/frontend", "dest": "start_enhanced_server.py" },
    { "src": "/(search|search-fast|score|score-fast|outreach|full-pipeline|health)", "methods": ["GET", "POST"], "dest": "start_enhanced_server.py" },
    { "src": "/", "dest": "start_enhanced_server.py" }
  ]
}
